@model WebLinkList.EF.Model.Category

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GraphColor" class="control-label"></label>
                <select asp-for="GraphColorInt" class="form-control">
                    @foreach (var color in WebLinkList.Common.DataListProvider.GetColors())
                    {
                        <option value="@color.ToArgb()" style="background-color:rgb(@color.R, @color.G, @color.B)">@color</option>
                    }
                </select>
                <span asp-validation-for="GraphColorInt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

